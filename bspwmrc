#! /bin/sh

sxhkd &

# 这里参考了 archwiki , 使用 xrandr -q 可以获得监视器名称
#bspc monitor -d I II III IV V VI VII VIII IX X
bspc monitor eDP1 -d I II III IV V VI
bspc monitor HDMI1 -d VII VIII
bspc monitor VIRTUAL1 -d IX X

# 边框宽度
bspc config border_width         8
# 窗口间距
bspc config window_gap           0
# 正在使用的窗口边框颜色
bspc config focused_border_color #FFA500
# 正常的窗口边框颜色
bspc config normal_border_color #FFFACD
# 监视器底边缩进给 pannal
bspc config -m eDP1 bottom_padding 54

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# 一些规则，a 后面那个是该规则作用的程序必须是的类别
bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
